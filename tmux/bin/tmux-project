#!/bin/bash

# Obtener el nombre de la sesi贸n basado en la carpeta actual
SESSION_NAME=$(basename "$PWD" | tr . -)

# Verificar si la sesi贸n ya existe
tmux has-session -t "$SESSION_NAME" 2>/dev/null

if [ $? != 0 ]; then
  # Si no existe, crear una nueva sesi贸n con el layout deseado
  tmux new-session -d -s "$SESSION_NAME" -c "$PWD"

  # Ventana 1: 
  tmux rename-window -t "$SESSION_NAME:1" "Default"

fi

# Conectarse a la sesi贸n
tmux attach-session -t "$SESSION_NAME"
